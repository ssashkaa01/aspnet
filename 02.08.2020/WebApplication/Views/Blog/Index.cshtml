
@{

    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Blog</h2>


<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="container">
                <div class="row">
                    @foreach (WebApplication.Entities.Post item in Model.Posts)
                    {
                        <div class="col-md-6">
                            <h2>@item.Title</h2>
                            <p>@item.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <ul class="list-group">
                @foreach (WebApplication.Entities.Category item in Model.Categories)
                {
                    <li class="list-group-item">@item.Name</li>
                }
            </ul>
        </div>
    </div>
</div>
